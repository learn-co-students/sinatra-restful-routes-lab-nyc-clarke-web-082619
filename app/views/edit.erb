<form method="POST" action="/recipes/<%= @recipe.id%>">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <label name="recipe_name">Recipe Name</label>
    <input type="text" id="recipe_name" value="<%=@recipe.name%>" name="name"><br>
    <label name="recipe_ingredients">Ingredients: </label>
    <input type="text" id="recipe_ingredients" value="<%=@recipe.ingredients%>" name="ingredients"><br>
    <label name="">Cook time: </label>
    <input type="text" id="recipe_cook_time" value="<%=@recipe.cook_time%>" name="cook_time"><br>
    <input type="submit" value="Submit">
</form>